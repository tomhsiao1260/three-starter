{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": false,
		"paths": {
		  "./*": ["./*"]
		},
  },
	"typeRoots": [
		"node_modules/@types",
		"src/types",
	],
  "include": ["./src"]
}